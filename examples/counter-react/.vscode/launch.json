    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Running Jest",
            "port": 9230
        },
        {
            "name": "Launch & Attach to Jest",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk=0.0.0.0:9230",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
